        <script><![CDATA[var currentYear = 0;
//Client-side 'onclick' function
function glideAjaxSample() {
	// currentYear = prompt('Inserisci l\'anno di riferimento per il calcolo del report');
	// new GlideAjax object referencing name of AJAX script include
	var ga = new GlideAjax("PM_GlideAjaxSample");
	// add name parameter to define which function we want to call
	ga.addParam("sysparm_name", "helloWorld");
	ga.addParam('sysparm_user_name', "Paolo");
	//ga.addParam("sysparm_currentYear", currentYear);
	//gs.log('REPORT');
	ga.getXML(ajaxResponse);
	
	function ajaxResponse(serverResponse) {
		var response = serverResponse.responseText;
		try {
		var result = serverResponse.responseXML.getElementsByTagName("xml");
		var answer = result[0].getAttribute("answer");
			alert(answer);
		} catch (err) {
			alert ("Error: " + err + " Response: " + response);
			}			
	}
}]]></script>
